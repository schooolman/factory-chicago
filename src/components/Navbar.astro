---
import logo from "../assets/logo-white.svg";
---

<nav id="navbar">
  <a href="/">
    <img
      id="logo"
      src={logo.src}
      alt="Factory Party Production Logo"
      style="width: 100px; height: auto; margin-right: auto;"
    />
  </a>
  <button id="hamburger" aria-label="Toggle navigation">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <ul id="nav-links">
    <li><a href="/events">Events</a></li>
    <li><a href="/under-construction">About</a></li>
    <li><a href="/under-construction">Media</a></li>
    <li><a href="/under-construction">Contact</a></li>
  </ul>
</nav>

<style>
  /* General Navbar Styles */
  #navbar {
    background-color: #39273f;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    font-family: "Compacta Blk BT", Inter, Roboto, Arial, sans-serif;
    font-size: 24px;
    text-transform: uppercase;
  }

  #logo {
    padding: 30px;
  }

  #nav-links {
    list-style: none;
    display: flex;
    justify-content: flex-end;
    margin-right: 40px;
    padding: 0;
  }

  #nav-links li {
    margin: 0 15px;
    position: relative;
  }

  #nav-links li::after {
    content: "|";
    color: #ffffff;
    position: absolute;
    right: -20px;
    pointer-events: none; /* Disable hover on li::after */
  }

  #nav-links li:last-child::after {
    content: ""; /* Remove the separator after the last item */
  }

  #nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-size: 18px;
    padding: 5px;
    display: inline-block;
    height: 100%;
  }

  #nav-links li:nth-child(even) a:hover {
    display: inline-block;
    transform: rotate(-5deg);
  }
  #nav-links li:nth-child(odd) a:hover {
    display: inline-block;
    transform: rotate(5deg);
  }

  #nav-links li:hover a {
    color: #070707;
  }

  #nav-links li:hover {
    background-color: #d8f500;
  }

  /* Hamburger Button Styles */
  #hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 60px;
    height: 30px;
    background: none;
    border: none;
    margin-right: 40px;
    cursor: pointer;
    z-index: 1100;
  }

  #hamburger span {
    display: block;
    width: 100%;
    height: 3px;
    position: relative;
    background-color: #ffffff;
    transition: all 0.3s ease-in-out;
  }

  #hamburger.active span:nth-child(1) {
    transform: rotate(45deg);
    top: 10px;
  }

  #hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  #hamburger.active span:nth-child(3) {
    transform: rotate(-45deg);
    top: -15px;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    #logo {
      padding: 30px;
    }
    #nav-links {
      display: none;
      flex-direction: column;
      align-items: center;
      position: absolute;
      top: 80%;
      left: 0;
      width: 100%;
      background-color: #39273f;
      padding: 20px 0;
    }

    #nav-links.active {
      display: flex;
    }

    #hamburger {
      display: flex;
    }

    #nav-links li {
      margin: 10px 0;
    }

    #nav-links li::after {
      display: none; /* Remove separators for vertical layout */
    }
  }
</style>

<script>
  const hamburger = document.getElementById("hamburger");
  const navLinks = document.getElementById("nav-links");

  if (hamburger) {
    hamburger.addEventListener("click", () => {
      if (navLinks) {
        navLinks.classList.toggle("active");
        hamburger.classList.toggle("active");
        document.body.classList.toggle("no-scroll");
      }
    });
  }
</script>
