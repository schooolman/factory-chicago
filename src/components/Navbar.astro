---
import logo from "../assets/logo-white.svg";

const currentPath = Astro.url.pathname; // Get the current route
---

<nav id="navbar">
  <div class="navbar-main">
    <a href="/">
      <img id="logo" src={logo.src} alt="Factory Party Production Logo" />
    </a>
    <button id="hamburger" aria-label="Toggle navigation">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
  <ul id="nav-links">
    <li class={currentPath === "/about" ? "active" : ""}>
      <a href="/about" class="nav-link">About</a>
    </li>
    <li class={currentPath === "/events" ? "active" : ""}>
      <a href="/events" class="nav-link">Events</a>
    </li>
    <li class={currentPath === "/under-construction" ? "active" : ""}>
      <a href="/under-construction" class="nav-link">Media</a>
    </li>
    <li class={currentPath === "/under-construction" ? "active" : ""}>
      <a href="/under-construction" class="nav-link">Contact</a>
    </li>
  </ul>
</nav>

<style>
  /* General Navbar Styles */
  #navbar {
    background-color: #39273f;
    background: linear-gradient(to top, #39273f 20%, #070707);
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    font-family: "Compacta Blk BT", Inter, Roboto, Arial, sans-serif;
    font-size: 24px;
    text-transform: uppercase;
  }

  .navbar-main {
    background-color: #39273f;
    background: linear-gradient(to top, #39273f 20%, #070707);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    z-index: 1000;
  }

  #logo {
    padding: 30px;
    width: 70px;
    height: auto;
    margin-right: auto;
  }

  #nav-links {
    list-style: none;
    display: flex;
    justify-content: flex-end;
    margin-right: 40px;
    padding: 0;
  }

  #nav-links li {
    margin: 0 15px;
    position: relative;
  }

  #nav-links li::after {
    content: "|";
    color: #ffffff;
    position: absolute;
    right: -20px;
    pointer-events: none; /* Disable hover on li::after */
  }

  #nav-links li:last-child::after {
    content: ""; /* Remove the separator after the last item */
  }

  #nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-size: 18px;
    padding: 5px;
    display: inline-block;
    height: 100%;
  }

  #nav-links li:nth-child(even) a:hover {
    display: inline-block;
    transform: rotate(-5deg);
  }
  #nav-links li:nth-child(odd) a:hover {
    display: inline-block;
    transform: rotate(5deg);
  }
  #nav-links li:nth-child(even) a.active {
    display: inline-block;
    transform: rotate(-5deg);
  }
  #nav-links li:nth-child(odd) a.active {
    display: inline-block;
    transform: rotate(5deg);
  }

  #nav-links li:hover a {
    color: #070707;
  }

  #nav-links li:hover {
    background-color: #d8f500;
  }
  #nav-links a.active {
    color: #070707;
  }

  #nav-links li.active {
    background-color: #d8f500;
  }

  /* Hamburger Button Styles */
  #hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 60px;
    height: 30px;
    background: none;
    border: none;
    margin-right: 40px;
    cursor: pointer;
    z-index: 1100;
  }

  #hamburger span {
    display: block;
    width: 100%;
    height: 5px;
    border-radius: 5px;
    position: relative;
    background-color: #ffffff;
    transition: all 0.1s ease-in-out;
  }
  /* Hamburger Button Animation */
  @keyframes open-top {
    0% {
      transform: rotate(0);
      top: 0;
    }
    50% {
      transform: rotate(0);
      top: 40%;
    }
    100% {
      transform: rotate(45deg);
      top: 10px;
    }
  }

  @keyframes open-middle {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 1;
    }
    51% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  @keyframes open-bottom {
    0% {
      transform: rotate(0);
      top: 0;
    }
    50% {
      transform: rotate(0);
      top: -40%;
    }
    100% {
      transform: rotate(-45deg);
      top: calc(-40% + -3px);
    }
  }

  @keyframes close-top {
    0% {
      transform: rotate(45deg);
      top: 10px;
    }
    50% {
      transform: rotate(0);
      top: 40%;
    }
    100% {
      transform: rotate(0);
      top: 0;
    }
  }

  @keyframes close-middle {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0;
    }
    51% {
      opacity: 1;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes close-bottom {
    0% {
      transform: rotate(-45deg);
      top: -40%;
    }
    50% {
      transform: rotate(0);
      top: -40%;
    }
    100% {
      transform: rotate(0);
      top: 0;
    }
  }

  #hamburger span {
    animation-duration: 0.3s;
    animation-fill-mode: forwards;
  }

  #hamburger.active span:nth-child(1) {
    animation-name: open-top;
  }

  #hamburger.active span:nth-child(2) {
    animation-name: open-middle;
  }

  #hamburger.active span:nth-child(3) {
    animation-name: open-bottom;
  }

  #hamburger:not(.active) span:nth-child(1) {
    animation-name: close-top;
  }

  #hamburger:not(.active) span:nth-child(2) {
    animation-name: close-middle;
  }

  #hamburger:not(.active) span:nth-child(3) {
    animation-name: close-bottom;
  }
  #hamburger.active span:nth-child(1) {
    transform: rotate(45deg);
    top: 10px;
  }

  #hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  #hamburger.active span:nth-child(3) {
    transform: rotate(-45deg);
    top: -15px;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    #logo {
      padding: 30px 30px 10px 30px;
      width: 60px;
    }
    #nav-links {
      display: flex;
      flex-direction: column;
      align-items: center;
      position: absolute;
      top: 80%;
      left: 0;
      width: 100%;
      background-color: #39273f;
      padding: 20px 0;
      transition:
        transform 0.3s ease-in-out,
        opacity 0.3s ease-in-out;
      transform: translateY(-100%);
    }

    #nav-links.active {
      transform: translateY(0);
    }
    #nav-links.active {
      /* display: flex; */
    }

    #hamburger {
      display: flex;
      margin-top: 10px;
    }

    #nav-links li {
      margin: 10px 0;
    }

    #nav-links li::after {
      display: none; /* Remove separators for vertical layout */
    }
  }
</style>

<script>
  const hamburger = document.getElementById("hamburger");
  const navLinks = document.getElementById("nav-links");
  const currentPath = window.location.pathname;

  // Highlight the active link
  const links = document.querySelectorAll(".nav-link");
  links.forEach((link) => {
    if (
      link.getAttribute("href") === `${currentPath}/` ||
      link.getAttribute("href") === currentPath
    ) {
      link.classList.add("active");
      if (link.parentElement) {
        link.parentElement.classList.add("active");
      }
    }
  });

  if (hamburger) {
    hamburger.addEventListener("click", () => {
      if (navLinks) {
        console.log("hamburger clicked");
        navLinks.classList.toggle("active");
        hamburger.classList.toggle("active");
        document.body.classList.toggle("no-scroll");
      }
    });
  }
</script>
