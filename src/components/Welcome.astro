---
import background from "../assets/background-texture.jpg";
import "@fontsource/libre-barcode-39-text";
import dancefloor from "../assets/dancefloor.jpg";
import logoblackwords from "../assets/logo-black.svg";
import cone from "../assets/cone-black.svg";
import { Image } from "astro:assets";
---

<meta
  property="og:title"
  content="Factory Chicago - High-Energy Dance Events"
/>
<meta
  property="og:description"
  content="Join Factory Chicago for immersive dance events with top DJs and inclusive atmospheres."
/>
<meta property="og:image" content="/path/to/preview-image.jpg" />
<meta property="og:url" content="https://factorychi.com" />
<meta name="twitter:card" content="summary_large_image" />
<meta
  name="twitter:title"
  content="Factory Chicago - High-Energy Dance Events"
/>
<meta
  name="twitter:description"
  content="Join Factory Chicago for immersive dance events with top DJs and inclusive atmospheres."
/>
<meta name="twitter:image" content="/path/to/preview-image.jpg" />

<div id="container">
  <main>
    <section id="hero">
      <h1>Welcome to FACTORY CHICAGO</h1>
      <Image
        id="dancefloor"
        src={dancefloor}
        alt="Dance Floor"
        fetchpriority="high"
      />
      <Image
        id="logo"
        src={logoblackwords}
        alt="Factory Party Production Logo"
      />
      <div class="links">
        <img class="cone" src={cone.src} alt="traffic cone" />
        <h2>
          <a
            class="homepage-link"
            href="https://instagram.com/factory.chicago"
            target="_blank"
            rel="noopener noreferrer"
          >
            Follow us on Instagram
          </a>
        </h2>
        <img class="cone" src={cone.src} alt="traffic cone" />
        <div class="cone-group">
          <img class="cone-mobile" src={cone.src} alt="traffic cone" />
          <img class="cone-mobile" src={cone.src} alt="traffic cone" />
          <img class="cone-mobile" src={cone.src} alt="traffic cone" />
        </div>
        <h2>
          <a
            class="homepage-link"
            href="https://www.canva.com/design/DAGgUdzLNJY/aLtI7YlY7NL21OMT7lhpqg/view?utm_content=DAGgUdzLNJY&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=hf1022dd184#1"
            target="_blank"
            rel="noopener noreferrer"
          >
            View our Media Kit
          </a>
        </h2>
        <img class="cone" src={cone.src} alt="traffic cone" />
      </div>
    </section>
  </main>
</div>

<style>
  /* General Styles */
  #container {
    font-family: "Compacta Blk BT", Inter, Roboto, Arial, sans-serif;
    height: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-weight: normal;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #070707;
    max-width: 100vw;
    overflow: hidden;
    position: relative;
  }

  h1 {
    position: relative;
    font-weight: normal;
    font-size: 48px;
    text-transform: uppercase;
    z-index: 1;
    text-shadow: #ffffff 0px 0px 4px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h2 {
    display: flex;
    font-size: 24px;
    font-weight: normal;
    margin: 0;
    text-transform: uppercase;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  #dancefloor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
    -webkit-mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
    filter: blur(3px);
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    object-fit: cover;
  }

  #logo {
    width: 80%;
    max-width: 300px;
    margin: 20px auto;
    animation: pulse 2s infinite;
    height: 100%;
  }

  .cone {
    width: 40px;
    height: auto;
  }

  .cone-mobile {
    display: none;
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    position: relative;
    transform: translateX(-28px);
    font-size: 18px;
  }

  .homepage-link {
    background-color: #d8f500;
    margin: 0 10px;
    color: #070707;
    line-height: 1.5;
    text-decoration: none;
    text-transform: uppercase;
    font-family: "Compacta Blk BT", sans-serif;
    -webkit-font-smoothing: antialiased;
    padding: 5px 5px 0 5px;
  }

  .homepage-link:hover {
    color: #694873;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }

  .cta {
    margin-top: 40px;
  }

  .cta-button {
    display: inline-block;
    padding: 12px 24px;
    background: linear-gradient(90deg, #ff7a18, #ff3cac);
    color: #070707;
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 8px;
    transition: background 0.3s;
  }

  .cta-button:hover {
    background: linear-gradient(90deg, #ff3cac, #ff7a18);
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(0.95);
    }
    50% {
      transform: scale(1);
    }
  }

  @media screen and (max-width: 768px) {
    h1 {
      font-size: 36px;
    }
    #logo {
      width: 40%;
    }

    .links {
      flex-direction: column;
      align-items: center;
      transform: translateX(0);
    }
    .homepage-link {
      font-size: 14px;
      padding: 8px;
    }
    .cone,
    .cone-mobile {
      display: block;
      width: 30px;
      margin: 10px;
    }

    .cone:not(.cone-mobile) {
      display: none;
    }

    .conet-group {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .cta-button {
      font-size: 18px;
      padding: 10px 20px;
    }
  }
</style>
